package towerDefense;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferStrategy;

import javax.swing.JDialog;
import javax.swing.JFrame;

public class Frame extends JFrame {

	private BufferStrategy strat;

	//Knöpfe
	static Knopf knBeenden = new Knopf(Spielablauf.spielfeldBreite*Spielablauf.quadratGröße+250, 0, 50, 50, Color.GRAY);

	public Frame() {
		//super("MoveTest");
		addKeyListener(new KeyHandler());
		addMouseListener(new MouseHandler());
		addMouseMotionListener(new MouseHandler());
	}

	public void makeStrat() {
		createBufferStrategy(2);
		strat = getBufferStrategy();
	}

	public void repaintScreen() {
		Graphics g = strat.getDrawGraphics();
		draw(g);
		g.dispose();
		strat.show();
	}

	private void draw(Graphics g) {
		g.setColor(Color.RED);
		
		//Grundgitter
		for(int i = 0; i<Spielablauf.spielfeld.length; i++){
			for(int j = 0; j<Spielablauf.spielfeld[i].length; j++){
				g.drawRect(i*Spielablauf.quadratGröße, j*Spielablauf.quadratGröße, Spielablauf.quadratGröße, Spielablauf.quadratGröße);
			}
		}
				
		//Türme
		g.setColor(Color.ORANGE);
		for(int i = 0; i<Spielablauf.türme.size(); i++){
			Turm t = Spielablauf.türme.get(i);
			g.fillRect(t.getX(), t.getY(), Spielablauf.quadratGröße-1, Spielablauf.quadratGröße-1);
		}
		
		//TurmbauenKnopf
/*		g.setColor(Color.GRAY);
		if(Turm.getTurmAusgewählt()==true){
			g.setColor(Color.GREEN);
		}
		g.fillRect((Spielablauf.spielfeldBreite+1)*Spielablauf.quadratGröße, Spielablauf.quadratGröße, Spielablauf.quadratGröße*4, Spielablauf.quadratGröße);
*/				
		//TurmbauKnopf2.0
	//	g.setColor(knBeenden.getColor());
	//	g.fillRect(knBeenden.getBounding().x, knBeenden.getBounding().y, knBeenden.getBounding().width, knBeenden.getBounding().height);
		
		//BeendenKnopf
	//	g.setColor(Color.BLUE);
	//	g.fillRect(Spielablauf.spielfeldBreite*Spielablauf.quadratGröße+250, 0, 50, 50);
		
		//BeendenKnopf2.0
		g.setColor(knBeenden.getColor());
		g.fillRect(knBeenden.getBounding().x, knBeenden.getBounding().y, knBeenden.getBounding().width, knBeenden.getBounding().height);
	}
}